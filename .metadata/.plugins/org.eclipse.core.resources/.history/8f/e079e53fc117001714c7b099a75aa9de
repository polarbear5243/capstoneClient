#pragma once
#include<fstream>
#include<string>

#define FILE_DEFULT_FOLDER "MyApp"
#define FILE_ROOT_FOLDER "/opt/usr/media"

using namespace std;

class FileOutput{
private:
	ofstream * mFile;
	string mFilePath;

public:
	FileOutput(string file){

		string defultPath = FILE_ROOT_FOLDER;
		defultPath = defultPath + "/" + FILE_DEFULT_FOLDER;

		if(access(defultPath.c_str(),F_OK) != 0){
			mkdir(defultPath.c_str(),0755);
		}

		mFilePath = defultPath + "/" + file;
		mFile = new ofstream(mFilePath.c_str());

	}
	void writeln(string str){
		(*mFile) << str << endl;
	}
	void write(string str){
		(*mFile) << str;
	}
	void close(){
		mFile->close();
	}
	~FileOutput(){
		mFile->close();
	}
};
